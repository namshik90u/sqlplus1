INSERT INTO custominfo_tbl2 VALUES('ddd','홍고객','공산품','010-1111-1114','ddd@korea.com','대전');
INSERT INTO custominfo_tbl2 VALUES('eee','조고객','컴퓨터','010-1111-1115','eee@korea.com','대전');
INSERT INTO custominfo_tbl2 VALUES('fff','백고객','관광','010-1111-1116','fff@korea.com','울산');

SELECT d.dmno 발송번호,
d.custid 고객ID,
c.author 고객명,
TO_CHAR(d.maildate,'YYYY-MM-DD') 발송일,
d.contents 내용,
d.campain 캠페인구분
FROM DM_TBL2 D, custominfo_tbl2 c
WHERE d.custid=c.custid
GROUP BY
d.dmno,
d.custid,
c.author,
TO_CHAR(d.maildate,'YYYY-MM-DD'),
d.contents,
d.campain
ORDER BY
d.dmno;

INSERT INTO custominfo_tbl2 VALUES(?,?,?,?,?,?)

SELECT c.area 지역,
count(c.area) 건수
FROM custominfo_tbl2 c
group by c.area;
