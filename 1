CREATE TABLE custominfo_tbl2(custid varchar2(10) NOT NULL PRIMARY KEY,
author varchar2(20),
goods varchar2(20),
phone varchar2(13),
email varchar2(20),
area varchar2(20));

INSERT INTO custominfo_tbl2 VALUES('aaa','김고객','의류','010-1111-1111','aaa@korea.com','서울');
